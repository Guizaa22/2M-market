<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminDashboardController">
   <children>
      <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label fx:id="welcomeLabel" text="Bienvenue, Admin" textAlignment="LEFT">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="deconnexionButton" mnemonicParsing="false" onAction="#handleDeconnexion" text="Déconnexion" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </HBox>
            <Separator />
            <VBox alignment="CENTER" spacing="30.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Dashboard Administrateur" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER" spacing="30.0">
                     <children>
                        <VBox alignment="CENTER" spacing="15.0">
                           <children>
                              <Button fx:id="gestionStockButton" mnemonicParsing="false" onAction="#handleGestionStock" prefHeight="80.0" prefWidth="200.0" text="Gestion de Stock" />
                              <Label text="Gérer les produits et le stock" textAlignment="CENTER" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="15.0">
                           <children>
                              <Button fx:id="gestionUtilisateursButton" mnemonicParsing="false" onAction="#handleGestionUtilisateurs" prefHeight="80.0" prefWidth="200.0" text="Gestion Utilisateurs" />
                              <Label text="Gérer les utilisateurs" textAlignment="CENTER" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>

