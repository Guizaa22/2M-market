<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CaisseController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #4CAF50;">
               <children>
                  <Label text="Caisse - Point de Vente" textAlignment="LEFT" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="categoriesButton" mnemonicParsing="false" onAction="#handleCategories" 
                          text="Catégories" style="-fx-background-color: white; -fx-text-fill: #4CAF50; -fx-font-weight: bold; -fx-background-radius: 5;" />
                  <Button fx:id="deconnexionButton" mnemonicParsing="false" onAction="#handleDeconnexion" 
                          text="Déconnexion" style="-fx-background-color: white; -fx-text-fill: #4CAF50; -fx-font-weight: bold; -fx-background-radius: 5;" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </HBox>
            <Separator />
            <HBox spacing="20.0">
               <children>
                  <VBox spacing="15.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="Scanner / Ajouter Produit" textAlignment="LEFT">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <GridPane hgap="10.0" vgap="10.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="120.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="300.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <Label text="Code-barres:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                              <TextField fx:id="codeBarreField" onAction="#handleCodeBarreScan" onKeyReleased="#handleRechercheProduit" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                              <Label text="Quantité:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                              <TextField fx:id="quantiteField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                           </children>
                        </GridPane>
                        <Label fx:id="produitInfoLabel" text="" textFill="#0066cc" />
                        <Button fx:id="ajouterButton" mnemonicParsing="false" onAction="#handleAjouter" prefHeight="40.0" prefWidth="200.0" text="Ajouter au Panier" />
                        <Separator />
                        <Label fx:id="totalLabel" text="Total: 0.00 €" textAlignment="CENTER">
                           <font>
                              <Font name="System Bold" size="20.0" />
                           </font>
                        </Label>
                        <HBox spacing="10.0">
                           <children>
                              <Button fx:id="validerButton" mnemonicParsing="false" onAction="#handleValider" prefHeight="50.0" prefWidth="150.0" text="Valider Vente" />
                              <Button fx:id="annulerButton" mnemonicParsing="false" onAction="#handleAnnuler" prefHeight="50.0" prefWidth="150.0" text="Annuler" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Panier" textAlignment="LEFT">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </Label>
                              <Region HBox.hgrow="ALWAYS" />
                              <Button fx:id="retirerButton" mnemonicParsing="false" onAction="#handleRetirer" text="Retirer" />
                           </children>
                        </HBox>
                        <TableView fx:id="panierTable" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="produitColumn" prefWidth="250.0" text="Produit" />
                              <TableColumn fx:id="quantiteColumn" prefWidth="80.0" text="Qté" />
                              <TableColumn fx:id="prixUnitaireColumn" prefWidth="100.0" text="Prix Unitaire" />
                              <TableColumn fx:id="sousTotalColumn" prefWidth="120.0" text="Sous-total" />
                           </columns>
                        </TableView>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="20.0" top="10.0" />
                     </padding>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>

