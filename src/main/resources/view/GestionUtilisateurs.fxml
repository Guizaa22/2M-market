<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.GestionUtilisateursController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Gestion des Utilisateurs" textAlignment="LEFT">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="retourButton" mnemonicParsing="false" onAction="#handleRetour" text="Retour" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </HBox>
            <Separator />
            <HBox spacing="20.0">
               <children>
                  <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="Formulaire Utilisateur" textAlignment="LEFT">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <GridPane hgap="10.0" vgap="10.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="120.0" prefWidth="150.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="250.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <Label text="Nom d'utilisateur:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                              <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                              <Label text="Mot de passe:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                              <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <Label text="Rôle:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                              <ComboBox fx:id="roleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                           </children>
                        </GridPane>
                        <Label text="Note: Laissez le mot de passe vide pour ne pas le modifier lors de l'édition" textFill="#666666" wrapText="true" />
                        <HBox spacing="10.0">
                           <children>
                              <Button fx:id="ajouterButton" mnemonicParsing="false" onAction="#handleAjouter" text="Ajouter" />
                              <Button fx:id="modifierButton" mnemonicParsing="false" onAction="#handleModifier" text="Modifier" />
                              <Button fx:id="supprimerButton" mnemonicParsing="false" onAction="#handleSupprimer" text="Supprimer" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="Liste des Utilisateurs" textAlignment="LEFT">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <TableView fx:id="utilisateursTable" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="usernameColumn" prefWidth="200.0" text="Nom d'utilisateur" />
                              <TableColumn fx:id="roleColumn" prefWidth="150.0" text="Rôle" />
                           </columns>
                        </TableView>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="20.0" top="10.0" />
                     </padding>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>

