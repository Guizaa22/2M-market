<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.GestionStockController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Gestion de Stock" textAlignment="LEFT">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="retourButton" mnemonicParsing="false" onAction="#handleRetour" text="Retour" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </HBox>
            <Separator />
            <HBox spacing="20.0">
               <children>
                  <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="Formulaire Produit" textAlignment="LEFT">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <GridPane hgap="10.0" vgap="10.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="120.0" prefWidth="150.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="250.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <Label text="Code-barres:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                              <TextField fx:id="codeBarreField" onAction="#handleCodeBarreScan" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                              <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                              <TextField fx:id="nomField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <Label text="Prix d'achat (€):" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                              <TextField fx:id="prixAchatField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              <Label text="Prix de vente (€):" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                              <TextField fx:id="prixVenteField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                              <Label text="Quantité stock:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                              <TextField fx:id="quantiteStockField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                              <Label text="Seuil d'alerte:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                              <TextField fx:id="seuilAlerteField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                           </children>
                        </GridPane>
                        <HBox spacing="10.0">
                           <children>
                              <Button fx:id="ajouterButton" mnemonicParsing="false" onAction="#handleAjouter" text="Ajouter" />
                              <Button fx:id="modifierButton" mnemonicParsing="false" onAction="#handleModifier" text="Modifier" />
                              <Button fx:id="supprimerButton" mnemonicParsing="false" onAction="#handleSupprimer" text="Supprimer" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Liste des Produits" textAlignment="LEFT">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </Label>
                              <Region HBox.hgrow="ALWAYS" />
                              <TextField fx:id="rechercheField" promptText="Rechercher..." />
                              <Button fx:id="rechercherButton" mnemonicParsing="false" onAction="#handleRechercher" text="Rechercher" />
                           </children>
                        </HBox>
                        <TableView fx:id="produitsTable" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="codeBarreColumn" prefWidth="120.0" text="Code-barres" />
                              <TableColumn fx:id="nomColumn" prefWidth="200.0" text="Nom" />
                              <TableColumn fx:id="prixAchatColumn" prefWidth="100.0" text="Prix Achat" />
                              <TableColumn fx:id="prixVenteColumn" prefWidth="100.0" text="Prix Vente" />
                              <TableColumn fx:id="quantiteStockColumn" prefWidth="100.0" text="Stock" />
                              <TableColumn fx:id="seuilAlerteColumn" prefWidth="100.0" text="Seuil" />
                           </columns>
                        </TableView>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="20.0" top="10.0" />
                     </padding>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>

